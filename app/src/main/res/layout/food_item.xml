<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/poster"
            android:layout_width="145dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdgeLength="60dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:requiresFadingEdge="horizontal"
                android:singleLine="true"
                android:text="Зеленый салат"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:maxLines="4"
                android:textColor="@color/gray_text_color"
                android:textSize="14sp"
                tools:text="aldaldnadkadldlndlkdsdkasdansdaskljdanasdnasdkjasldsjndaskjldaldaldnadkadldlndlkdsdkasdansdaskljdanasdnasdkjasldsjndaskjldaldaldnadkadldlndlkdsdkasdansdaskljdanasdnasdkjasldsjndaskjld" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/control_primary_active"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="от 345 ₽"
                    android:textColor="@color/control_primary_active"
                    android:textSize="13sp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>